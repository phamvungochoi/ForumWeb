@model ForumWeb.Areas.Administrator.Models.AdminViewModel
@{
    ViewBag.Title = "SignIn";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-3"></div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title">Đăng nhập</h4>
            </div>
            <div class="card-body">
                @if (ViewBag.Message != null)
                {
                    <span class="text-danger">@ViewBag.Message</span>
                }
                <form method="post" @Url.Action("SignIn", "Account")>
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label for="Username">@Html.DisplayName("Tài Khoản")</label>
                        @Html.EditorFor(model => model.TenDangNhap, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TenDangNhap, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="Password">@Html.DisplayName("Mật Khẩu")</label>
                        @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                    </div>                    
                    <button type="submit" class="btn btn-primary">Đăng nhập</button>
                </form>
            </div>
        </div>
    </div>
</div>


