@model ForumWeb.Models.BaiGui

@{
    ViewBag.Title = "Chi Tiết";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

    <h2 style="color:white">Chi Tiết Bài Viết</h2>

<div style="color:white">
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Mã Chủ Đề")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaChuDe)
        </dd>

        <dt>
            @Html.DisplayName("Mã Cộng Đồng")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaCongDong)
        </dd>

        <dt>
            @Html.DisplayName("Mã Lĩnh Vực")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaLinhVuc)
        </dd>

        <dt>
            @Html.DisplayName("Mã Người Dùng")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaNguoiSuDung)
        </dd>

        <dt>
            @Html.DisplayName("Số Điện Thoại")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SoDienThoai)
        </dd>

        <dt>
            @Html.DisplayName("Email")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayName("Ngày Gửi Bài")
