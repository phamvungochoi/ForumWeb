        </dd>

    </dl>
</div>
<p>
    <a href="@Url.Action("Edit", new { id = Model.MaBaiGui })" rel="tooltip" data-placement="left" title="Sửa" class="btn btn-success btn-simple">
        <i class="material-icons">edit</i>
    </a>
    <a href="@Url.Action("BaiViet", new { id = Model.MaBaiGui })" rel="tooltip" data-placement="left" title="Back To List" class="btn btn-success btn-simple">
        <i class="fa fa-sign-out"></i>
    </a>
</p>
