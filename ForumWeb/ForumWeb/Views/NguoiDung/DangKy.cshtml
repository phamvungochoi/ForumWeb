
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<table align="center">
    <h1 style="text-align:center">ĐĂNG KÝ THÀNH VIÊN</h1>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td> Tên đăng nhập:</td>
            <td>
                @Html.TextBox("TenDangNhap")
            @ViewData["Loi1"]
        </td>
    </tr>
    <tr style="height:40px">
        <td> Mật khẩu:</td>
        <td>
            @Html.Password("MatKhau")
        @ViewData["Loi2"]
    </td>
</tr>
<tr style="height:40px">
    <td> Mật khẩu nhập lại:</td>
    <td>
        @Html.Password("MatKhauNhapLai")
    @ViewData["Loi3"]
</td>
</tr>
<tr style="height:40px">
    <td> Họ tên:</td>
    <td>
        @Html.TextBox("HoTen")
    @ViewData["Loi4"]
</td>
</tr>
<tr style="height:40px">
    <td> Địa chỉ:</td>
    <td>
        @Html.TextBox("DiaChi")
    @ViewData["Loi5"]
</td>
</tr>
<tr>
    <td>Giới tính:</td>
    <td>
        <select name="GioiTinh">
            <option value="Nam">Nam</option>
            <option value="Nữ">Nữ</option>
            <option value="Khác">Khác</option>
        </select>
    </td>
</tr>
<tr style="height:40px">
    <td> Ngày sinh:</td>
    <td>
        <input type="date" name="NgaySinh" />
    </td>
</tr>
<tr style="height:40px">
    <td> Số điện thoại:</td>
    <td>
        @Html.TextBox("SoDienThoai")
    @ViewData["Loi7"]
</td>
</tr>
<tr style="height:40px">
    <td> Email:</td>
    <td>
        @Html.TextBox("Email")
    @ViewData["Loi8"]
</td>
</tr>
<tr style="height:40px">
    <td></td>
    <td>
        <input type="submit" value="Đăng ký" class="btn btn-primary" />
    </td>
</tr>
}
</table>