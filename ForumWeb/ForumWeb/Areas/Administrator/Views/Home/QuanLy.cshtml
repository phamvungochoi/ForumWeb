@using ForumWeb.Models
@using PagedList.Mvc;
@model PagedList.PagedList<ForumWeb.Models.Ad>
@{
    ViewBag.Title = "ADMIN";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-primary">
                    <h3 class="card-title">Danh sách quản trị</h3>
                </div>
                <div class="card-body">
                    <a class="btn btn-success" href="@Url.Action("ThemMoiAd")">
                        Tạo mới quản lý
                    </a>
                    <div class="table-responsive">
                        <table class="table">
                            <thead class=" text-primary">
                                <tr>
                                    <th>
                                        @Html.DisplayName("Mã Admin")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Tên Đăng Nhập")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Mật Khẩu")
                                    
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MaAdmin)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TenDangNhap)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MatKhau)
                                        </td>
                                        
                                        <td class="td-actions text-right">
                                            <a href="@Url.Action("XoaAd", new { id = item.MaAdmin })" rel="tooltip" data-placement="left" title="Xóa" class="btn btn-danger btn-simple">
                                                <i class="material-icons">close</i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
                        <div class="MenuTrang">
                            @Html.PagedListPager(Model, page => Url.Action("NhanVien", new { page = page }))
                        </div>
                        <style>
                            .MenuTrang ul {
                                margin: 0 auto;
                            }

                            .MenuTrang li {
                                display: inline;
                                padding: 4px;
                                border: 1px solid #d46cbe;
                                margin: 2px;
                            }

                                .MenuTrang li:hover {
                                    background-color: purple;
                                    color: white;
                                }
                        </style>
                    </div>
                </div>
            </div>
        </div>
    </div>

