@using ForumWeb.Models
@using PagedList.Mvc
@model PagedList.PagedList<ForumWeb.Models.NguoiSuDung>
@{
    ViewBag.Title = "NGƯỜI DÙNG";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-primary">
                    <h3 class="card-title">Danh sách người dùng</h3>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead class=" text-primary">
                                <tr>
                                    <th>
                                        @Html.DisplayName("Mã Người Dùng")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Tên Đăng Nhập")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Mật Khẩu")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Họ Tên")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Địa Chỉ")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Giới Tính")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Ngày Sinh")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Số Điện Thoại")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Email")
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MaNguoiSuDung)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TenDangNhap)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MatKhau)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.HoTen)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DiaChi)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.GioiTinh)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NgaySinh)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SoDienThoai)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td class="td-actions text-right">
                                        <a href="@Url.Action("ChiTietNSD", new { id = item.MaNguoiSuDung })" rel="tooltip" data-placement="left" title="Chi tiết" class="btn btn-info btn-simple">
                                            <i class="material-icons">description</i>
                                        </a>
                                        <a href="@Url.Action("SuaNSD", new { id = item.MaNguoiSuDung })" rel="tooltip" data-placement="left" title="Sửa" class="btn btn-success btn-simple">
                                            <i class="material-icons">edit</i>
                                        </a>
                                        <a href="@Url.Action("XoaNSD", new { id = item.MaNguoiSuDung })" rel="tooltip" data-placement="left" title="Xóa" class="btn btn-danger btn-simple">
                                            <i class="material-icons">close</i>
                                        </a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                        Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
                        <div class="MenuTrang">
                            @Html.PagedListPager(Model, page => Url.Action("NguoiSuDung", new { page = page }))
                        </div>
                        <style>
                            .MenuTrang ul {
                                margin: 0 auto;
                            }

                            .MenuTrang li {
                                display: inline;
                                padding: 4px;
                                border: 1px solid #d46cbe;
                                margin: 2px;
                            }

                                .MenuTrang li:hover {
                                    background-color: purple;
                                    color: white;
                                }
                        </style>
                    </div>
                </div>
            </div>
        </div>
    </div>

