@using ForumWeb.Models
@using PagedList.Mvc
@model PagedList.PagedList<ForumWeb.Models.LinhVuc>

@{
    ViewBag.Title = "LĨNH VỰC";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">
                <h3 class="card-title">Danh sách lĩnh vực</h3>
            </div>
            <div class="card-body">
                <a class="btn btn-success" href="@Url.Action("ThemMoiLV","Home")">
                    Tạo mới lĩnh vực
                </a>
                <div class="table-responsive">
                    <table class="table">
                        <thead class=" text-primary">
                            <tr>
                                <th style="color:white">
                                    @Html.DisplayName("Tên Lĩnh Vực")
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TenLinhVuc)
                                    </td>
                                    <td class="td-actions text-right">
                                        <a href="@Url.Action("SuaLV", new { id = item.MaLinhVuc })" rel="tooltip" data-placement="left" title="Sửa" class="btn btn-success btn-simple">
                                            <i class="material-icons">edit</i>
                                        </a>
                                        <a href="@Url.Action("XoaLV", new { id = item.MaLinhVuc })" rel="tooltip" data-placement="left" title="Xóa" class="btn btn-danger btn-simple">
                                            <i class="material-icons">close</i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
                    <div class="MenuTrang">
                        @Html.PagedListPager(Model, page => Url.Action("LinhVuc", new { page = page }))
                    </div>
                    <style>
                        .MenuTrang ul {
                            margin: 0 auto;
                        }

                        .MenuTrang li {
                            display: inline;
                            padding: 4px;
                            border: 1px solid #d46cbe;
                            margin: 2px;
                        }

                            .MenuTrang li:hover {
                                background-color: purple;
                                color: white;
                            }
                    </style>
                </div>
            </div>
        </div>
    </div>
</div>
