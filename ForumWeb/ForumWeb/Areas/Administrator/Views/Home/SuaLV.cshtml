@model ForumWeb.Models.LinhVuc

@{
    ViewBag.Title = "Sửa Lĩnh Vực";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

    <h2 style="color:white">Sửa Lĩnh Vực</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
